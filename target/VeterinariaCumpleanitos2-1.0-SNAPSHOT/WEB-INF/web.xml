<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>guardarPropietario</servlet-name>
        <servlet-class>Servlets.guardarPropietario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>guardarMascota</servlet-name>
        <servlet-class>ServletMascota.guardarMascota</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>actualizarPropietario</servlet-name>
        <servlet-class>Servlets.actualizarPropietario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>borrarPropietario</servlet-name>
        <servlet-class>Servlets.borrarPropietario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IniciarSesion</servlet-name>
        <servlet-class>Servlets.IniciarSesion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>guardarPropietario</servlet-name>
        <url-pattern>/guardarPropietario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>guardarMascota</servlet-name>
        <url-pattern>/guardarMascota</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>actualizarPropietario</servlet-name>
        <url-pattern>/actualizarPropietario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>borrarPropietario</servlet-name>
        <url-pattern>/borrarPropietario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IniciarSesion</servlet-name>
        <url-pattern>/IniciarSesion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
